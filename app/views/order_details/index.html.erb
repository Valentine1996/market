<h1>Listing order_details</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Product</th>
      <th>Order</th>
      <th width="150">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.number %></td>
        <td><%= link_to order_detail.product.name, order_detail.product %></td>
        <td><%= link_to order_detail.order.id, order_detail.order %></td>
        <td>
          <%= link_to 'Show', order_detail %> |
          <%= link_to 'Edit', edit_order_detail_path(order_detail) %> |
          <%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

